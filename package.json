{
  "name": "react-combo-provider",
  "version": "1.0.14",
  "description": "Tiny (around 0.7Kb minzipped) no dependencies utility function to quickly generate (with 1 call) Contexts, Providers and hooks that share the memory efficiently",
  "type": "module",
  "sideEffects": false,
  "source": "src/index.ts",
  "module": "dist/index.mjs",
  "main": "dist/index.cjs",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.cjs",
    "import": "./dist/index.mjs",
    "default": "./dist/index.mjs"
  },
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsup",
    "build/watch": "tsup --watch",
    "whats_there": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz",
    "lint": "biome check ./src",
    "lint:fix": "biome format --write ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Roman86/react-combo-provider.git"
  },
  "keywords": [
    "react",
    "hooks",
    "context",
    "provider",
    "store",
    "slice",
    "stacked",
    "scoped",
    "ts",
    "types",
    "typescript"
  ],
  "author": "Roman Kozodoi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Roman86/react-combo-provider/issues"
  },
  "homepage": "https://github.com/Roman86/react-combo-provider#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/react": "18",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": "^18"
  },
  "overrides": {
    "js-yaml": "^4.1.1",
    "glob": "^11.1.0"
  }
}
